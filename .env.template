# N-Guard VPN Configuration
# Copy this file to .env and fill in your values

# Public IP or Dynamic DNS hostname
# Examples:
#   - Static IP: PUBLIC_IP_OR_DDNS=203.0.113.1
#   - Dynamic DNS: PUBLIC_IP_OR_DDNS=home.duckdns.org
PUBLIC_IP_OR_DDNS=your-public-ip-or-ddns-hostname

# Number of WireGuard peers (clients) to generate configs for
# Default: 3 (e.g., iPhone, laptop, tablet)
NUM_PEERS=3

# AdGuard Home admin password (will be hashed on first setup)
# Access web UI at: http://<server-ip>:80
ADGUARD_ADMIN_PASSWORD=change-this-password

# Optional: WireGuard Easy Web UI password
# Only needed if you enable wg-easy service in docker-compose.yml
WG_EASY_PASSWORD=change-this-password

# Timezone (adjust to your location)
# List: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=Asia/Ho_Chi_Minh

# WAN Interface (network interface connected to internet)
# Common values: eth0, ens18, enp0s3, wlan0
# Find yours with: ip link show
WAN_INTERFACE=eth0

# VPN Network Configuration (usually no need to change)
VPN_SUBNET=10.13.13.0/24
ADGUARD_IP=10.13.13.1
UNBOUND_IP=10.13.13.2
SQUID_IP=10.13.13.3
WIREGUARD_IP=10.13.13.254

# Optional: Enable HTTPS interception (Squid SSL bump)
# WARNING: Requires installing CA certificate on client devices
# May break banking apps and certificate-pinned applications
# Values: true or false
ENABLE_MITM=false

# Optional: Backup configuration
BACKUP_ENABLED=true
BACKUP_DIR=/opt/n-guard-vpn/backups
BACKUP_RETENTION_DAYS=30

# N-Guard Web Manager Configuration
# Access at: http://<server-ip>:8080
GITHUB_REPO=nyonnguyen/n-guard-vpn
WEB_MANAGER_PORT=8080
AUTO_CHECK_UPDATES=true
CREATE_BACKUP_BEFORE_UPDATE=true
LOG_LEVEL=info
